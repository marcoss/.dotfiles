set number
set expandtab
set shiftwidth=4
set tabstop=4

" Linebreak on 500 characters
set lbr
set tw=500

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines

filetype plugin on
filetype indent on

set backspace=2

set autoread

" Ignore case when searching
set ignorecase
 
" When searching try to be smart about cases
set smartcase

" Show matching brackets when text indicator is over them
set showmatch

set termguicolors
